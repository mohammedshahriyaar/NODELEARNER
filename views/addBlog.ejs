<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('partials/head') %>
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <form method="post" action="/blog" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-check-label" for="coverImage">Upload File</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage">
              </div>
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title"  name="title">
            </div>
            <div class="mb-3">
            <label for="floatingTextarea" >Body</label>

              <textarea class="form-control"  id="floatingTextarea " name="body"></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>